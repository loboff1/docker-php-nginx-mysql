version: '3.7'

services:
  php:
    build: ./php
    container_name: task-php
    environment:
      - MYSQL_HOST=${MYSQL_HOST}
      - MYSQL_DATABASE=${MYSQL_DATABASE}
      - MYSQL_USER=${MYSQL_USER}
      - MYSQL_PASSWORD=${MYSQL_PASSWORD}
    restart: always
    working_dir: /var/www/
    volumes:
      - ./:/var/www
    depends_on:
      - mysql
    networks:
      - task-network

  nginx:
    image: nginx:stable-alpine
    container_name: task-nginx
    restart: always
    ports:
      - {{ port_nginx }}:80
    volumes:
      - ./:/var/www
      - ./nginx:/etc/nginx/conf.d 
    depends_on:
      - php 
    networks:
      - task-network  

  mysql:
    image: mysql:{{ ver_mysql }}
    container_name: task-mysql
    restart: always
    environment:
      - MYSQL_ROOT_PASSWORD=${MYSQL_ROOT_PASSWORD}
    volumes:
      - mysql_php:/mysql.sql       
    networks:
      - task-network     

volumes:
  mysql_php:

networks:
  task-network:
